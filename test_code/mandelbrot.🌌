let maximum number of iterations := 255;

func count mandelbrot iterations at point `x` `y` {
	let center x := x / 200 - 2.5;
	let center y := y / 200 - 1.0;

	let real part of z := 0;
	let imaginary part of z := 0;

	let iteration count := 0;

	while re*re + im*im < 4 && iteration count < maximum number of iterations {
		let new real part of z := re * re - im * im + center x;
		let new imaginary part of z := 2 * re * im + center y;
		re := new re;
		im := new im;
	}

	return iteration count;
}

println("P1 700 400");
let y := 0;
while y < 400 {
	let x := 0;
	while x < 700 {
		if count mandelbrot iterations at (x, y) == maximum number of iterations {
			print("1 ");
		} else {
			print("0 ");
		}
		x := x + 1;
	}
	y := y + 1;
}
println("");
