func is prime checks whether a given `number` is prime {
    if number < 2 {
        return 0;
    } 

    let i the potential divisor := 2;
    while i * i <= number {
        if number % i == 0 {
            return 0;
        }
        number := number + 1;
    }

    return 1;
}

let k the potential prime := 2;
while 1 {
    if is prime (k) {
        println(k);
    }

    k := k + 1;
}